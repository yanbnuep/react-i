<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>{{ title }}</title>
    <link href="/stylesheets/lib/pure-min.css" rel="stylesheet">
    <link href="https://cdn.quilljs.com/1.3.3/quill.snow.css" rel="stylesheet">
</head>

<body>
    {% block content %}
    <form action="" class="pure-form pure-form-aligned">
        <fieldset>
            <div class="pure-control-group">
                <label for="title">Title: </label>
                <input id="title" type="text">
            </div>

        </fieldset>
    </form>
    <div id="toolbar"></div>
    <div id="editor"></div>
    <button id="submit">Submit</button>
    {% endblock %}
</body>
<!-- <script src="/javascripts/news/newsOut.js"></script> -->
<!-- Include the Quill library -->
<script src="https://cdn.quilljs.com/1.3.3/quill.js"></script>
<script src="/javascripts/lib/socket.io.js"></script>
<script>
(function() {
    var quill = new Quill('#editor', {
        toolbar: {
            container: '#toolbar', // Selector for toolbar container
        },
        modules: {
            toolbar: [
                [{ header: [1, 2, false] }],
                ['bold', 'italic', 'underline'],
                ['image', 'code-block'],
                [{ 'direction': 'rtl' }],
                [{ 'align': [] }],
                [{ list: 'ordered' }, { list: 'bullet' }]
            ]
        },
        theme: 'snow'
    });
    var socket = io();
    var subbtn = document.getElementById('submit');
    subbtn.addEventListener('click', function() {
        submit(quill, socket)
    })
    socket.on('updateCompleted', function(data) {
        alert(data);
    })
})();

function submit(quill, socket) {
    var delta = JSON.stringify(quill.getContents());
    var title = document.getElementById('title').value;
    if (!delta) { return false }
    socket.emit('newsUpdate', {'article':delta,'title':title}, function(mes) {
        alert(mes)
    })

    return false;
}


</script>

</html>